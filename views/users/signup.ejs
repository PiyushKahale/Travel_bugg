<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h2 class="offset-3 col-6">Signup on Travel Bug!</h2>
    <div class="col-4 offset-4">
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <label for="username" class="form-label mt-3 mb-1">Username</label>
            <input
            name="username"
            id="username"
            class="form-control mb-3"
            type="text"
            required >
            <div class="valid-feedback">Looks good!</div>


            <label for="email" class="form-label mb-1">Email</label>
            <input
            name="email"
            id="email"
            class="form-control mb-3"
            type="text"
            required >
            <div class="invalid-feedback"> good!</div>


            <label for="password" class="mb-1 form-label">Password</label>
            <input
            name="password"
            id="password"
            class="form-control mb-2"
            type="password"
            required >
            <div class="valid-feedback">Great Match!</div>


            <button class="mt-1 btn btn-success">SignUp</button>
        </form>
    </div>
</div>